{
  "compilerOptions": {
    "target": "ESNEXT",
    "module": "CommonJS",
    "outDir": "./build/",
    "moduleResolution": "node",
    "useUnknownInCatchVariables": true,
    "exactOptionalPropertyTypes": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "esModuleInterop": true,
  },
  "include": [
    "src"
  ]
}
